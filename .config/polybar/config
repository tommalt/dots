; vim:ft=dosini
;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #050704
background-alt = #ffffff
grey = #99989b
darkgrey = #4f4f4f
foreground = #d2e3eb
primary = ${self.foreground}
secondary = #5b645f
alt = #489588
alert = #db2020
green = #32a51d
uline = ${self.primary}

[bar/mine]
monitor = ${env:MONITOR}
width = 100%
height = 24
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.alert}

border-size = 0
border-color = #000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = mono:pixelsize=9;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Wuncon Siji:pixelsize=9;1
font-3 = Inconsolata:pixelsize=10:weight=bold;0

modules-left = i3 alsa
modules-center = xwindow
modules-right = wlan cputemp date exitmenu
;modules-right = wlan filesystem cputemp cpu memory date exitmenu

tray-position = right
tray-padding = 0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:56:...%
label-font = 4

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.alert}
label-mounted-font = 4
label-unmounted-font = 4

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.alert}
label-empty-padding = 2

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.darkgrey}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cmus]
type = custom/script
label-font = 4

exec = sh ~/.config/polybar/cmus.sh
exec-if = pgrep -x cmus
interval = 5

click-left = cmus-remote --pause
click-right = cmus-remote --stop

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.alert}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.secondary}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-connected-font = 4
label-connected-foreground = ${colors.alt}

format-disconnected = <label-disconnected>
label-disconnected = %ifname% disconnected
label-disconnected-font = 4
label-disconnected-foreground = ${colors.alert}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.primary}

[module/date]
type = internal/date
interval = 5

date = " %D"
time = "%I:%M%p"
label = %date% %time%
label-font = 4

[module/alsa]
type = internal/alsa
format-volume = <label-volume> <bar-volume>
label-volume = ""
label-volume-foreground = ${colors.foreground}
label-volume-font = 4
format-muted-prefix = " "
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = ${colors.alt}
bar-volume-foreground-1 = ${colors.alt}
bar-volume-foreground-2 = ${colors.alt}
bar-volume-foreground-3 = ${colors.alt}
bar-volume-foreground-4 = ${colors.alt}
bar-volume-foreground-5 = ${colors.alt}
bar-volume-foreground-6 = ${colors.alt}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 4
bar-volume-fill = =
bar-volume-fill-font = 4
bar-volume-empty = -
bar-volume-empty-font = 4
bar-volume-empty-foreground = ${colors.secondary}

[module/cputemp]
type = custom/script
exec = ~/.config/polybar/temperature.sh
interval = 60
format = <label>
label-font = 4

[module/exitmenu]
type = custom/menu
label-open = exit
label-open-font = 4
label-open-foreground = ${colors.foreground}
menu-0-0 = exit
menu-0-0-exec = i3-msg exit
menu-0-0-font = 4
menu-0-0-foreground = ${colors.foreground}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

