!font configuration
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
!disable ANSI mode (CTRL+Shift) in URxvt
URxvt*iso14755: False
URxvt*iso14755_52: False

!colors
emacs*foreground:   #d59fd5
emacs*background:   #150c1e
! URxvt colors and transparency.
URxvt*foreground: #fefefe
URxvt*background: #000000

URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
!for pagers (less)
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!URxvt.font: xft:Inconsolata:size=11
URxvt.font: xft:Hack:size=9
URxvt.letterSpace: -1

URxvt.scrollBar: false
URxvt.cursorBlink: 1
URxvt.pointerBlank: true
URxvt.pointerBlankDelay: 987654321

!perls
URxvt.perl-ext-common: default,matcher,resize-font,clipboard,url-select,keyboard-select,-searchable-scrollback
URxvt.colorUL: #4682B4
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.url-select.underline: true
URxvt.keysym.M-u: perl:url-select:select_next
!left-click to open links
URxvt.matcher.button: 1
!vim mode
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.resize-font.smaller: M-o
URxvt.resize-font.bigger:  M-p
